def menu():
    print("\nDiagnostics Scanner")
    print("1) Scan this device")
    print("2) Scan another IP")

    choice = input("Select an option: ").strip()

    if choice == "1":
        scan_local_device()
    elif choice == "2":
        ip = input("Enter IP address: ").strip()
        scan_remote_ip(ip)
    else:
        print("Invalid option.")
